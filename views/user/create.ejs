<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Generate API Key</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #ffe1f0;
    }
    .card {
      border: 2px solid #ffb3da;
      border-radius: 12px;
    }
    .card-header {
      background-color: #ff66b2;
      color: white;
    }
    .form-label {
      color: #cc3b86;
      font-weight: 600;
    }
    .btn-primary {
      background-color: #ff66b2;
      border-color: #ff66b2;
    }
    .btn-primary:hover {
      background-color: #ff338f;
      border-color: #ff338f;
    }
    .btn-secondary {
      background-color: #ffb3da;
      color: black;
      border-color: #ffb3da;
    }
    .btn-secondary:hover {
      background-color: #ff8fc5;
      border-color: #ff8fc5;
    }
    .api-key-box {
      font-family: 'Courier New', Courier, monospace;
      background-color: #ffd3ec;
      padding: 0.75rem;
      border-radius: 6px;
      border: 1px solid #ff8ec9;
      word-break: break-all;
      color: #b8327e;
    }
    .alert-success {
      background-color: #ffdaf0;
      color: #b8327e;
      border-color: #ffb3da;
    }
    .alert-danger {
      background-color: #ffcbe2;
      color: #9c1f5f;
      border-color: #ff66b2;
    }
  </style>
</head>
<body>

  <div class="container mt-5">

    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 text-end mb-2">
        <a href="/admin/login" class="btn btn-sm btn-secondary">
          Login Sebagai Admin
        </a>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm">
          <div class="card-header text-center">
            <h3 class="mb-0">üíó Buat API Key Anda üíó</h3>
          </div>

          <div class="card-body p-4">

            <% if (message) { %>
              <div class="alert alert-<%= message.type === 'success' ? 'success' : 'danger' %>" role="alert">
                <%= message.text %>
              </div>
            <% } %>

            <form action="/save-key" method="POST" id="apiKeyForm">

              <div class="row mb-3">
                <div class="col-md-6">
                  <label for="first_name" class="form-label">First Name</label>
                  <input type="text" class="form-control" id="first_name" name="first_name" required>
                </div>
                <div class="col-md-6">
                  <label for="last_name" class="form-label">Last Name</label>
                  <input type="text" class="form-control" id="last_name" name="last_name" required>
                </div>
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>

              <hr class="my-4">

              <div class="mb-3">
                <label class="form-label">API Key Anda:</label>
                <input type="hidden" id="apiKeyInput" name="api_key">
                
                <div class="api-key-box" id="apiKeyDisplay">
                  üíñ Klik "Generate" untuk membuat key...
                </div>
              </div>

              <div class="d-grid gap-2 d-md-flex justify-content-between">
                <button type="button" class="btn btn-secondary" id="generateBtn">
                  ‚ú® Generate Key
                </button>

                <button type="submit" class="btn btn-primary">
                  üíæ Save API Key
                </button>
              </div>

            </form>

          </div>
        </div>

      </div>
    </div>

  </div>

  <script>
    document.getElementById('generateBtn').addEventListener('click', function() {
      const btn = this;
      btn.disabled = true;
      btn.textContent = 'Generating... üíó';

      fetch('/generate-key')
        .then(response => response.json())
        .then(data => {
          document.getElementById('apiKeyInput').value = data.apiKey;
          document.getElementById('apiKeyDisplay').textContent = data.apiKey;

          btn.disabled = false;
          btn.textContent = '‚ú® Generate Key';
        })
        .catch(err => {
          console.error(err);
          document.getElementById('apiKeyDisplay').textContent = '‚ùå Error. Coba lagi.';
          btn.disabled = false;
          btn.textContent = '‚ú® Generate Key';
        });
    });
  </script>

</body>
</html>
